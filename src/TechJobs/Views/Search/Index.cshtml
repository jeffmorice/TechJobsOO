@model TechJobs.ViewModels.SearchJobsViewModel

<h1>@Model.Title</h1>

<form action="/Search/Results">
    <p>
        @foreach (var column in Model.Columns)
        {
            var checkedColumn = column.Equals(Model.Column);

            <span>
                <input type="radio"
                       name="Column"
                       id="@column"
                       value="@column"
                       checked="@checkedColumn" />
                <label for="@column">@column</label>
            </span>
        }
    </p>

    <p>
        <label asp-for="Value"></label>
        <input asp-for="Value" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (Model.Jobs != null)
{

    <h3>@Model.Jobs.Count Result(s)</h3>

    <table class="job-listing">
        <tr>
            <th>Name</th>
            <th>Employer</th>
            <th>Location</th>
            <th>Core Competency</th>
            <th>Position Type</th>
        </tr>

        @foreach (var job in Model.Jobs)
        {

            <tr>
                <td>@job.Name</td>
                <td>@job.Employer</td>
                <td>@job.Location</td>
                <td>@job.CoreCompetency</td>
                <td>@job.PositionType</td>
            </tr>

        }
    </table>
}